{% extends 'base.html.twig' %}

{% block title %}ArchiProjects index
{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/portfolio.css')}}">
{% endblock %}


{% block body %}
    <section class="pageTop anim" data-scrollama-index="0">
        <div class="overflow-hidden">
            <div class="pageTop__bg parallax" data-rellax-speed="-3"
                style="background-image: url(&quot;https://media1.ledevoir.com/images_galerie/nwd_1135230_914403/image.jpg&quot;); transform: translate3d(0px, 0px, 0px);"
                style="margin-bottom: 100vh;"></div>
            <div class="pageTop__container">
                <div class="container">
                    <h1 class="pageTop__title">
                        Portfolio
                        <span class="reveal_title">Porfolio</span>
                    </h1>
                </div>
            </div>
        </div>
    </section>

    {% set archi_projectsArray = [] %}
    {% for archi_project in archi_projects|sort((a, b) => a.pays <=> b.pays) %}
        {% if archi_project.pays not in archi_projectsArray %}
					<h2 class="parallax-title-portfolio" data-rellax-speed="2">
						{{ archi_project.pays }}
					</h2>

            {% set archi_projectsArray = archi_projectsArray|merge([archi_project.pays]) %}
        {% endif %}

        <div class="product__content scrollTo">
            {% if loop.index is odd %}
            <section class="product__mainImg product__mainImg--first section__generic section__generic--fullRight anim in-view" data-scrollama-index="1">
                        <div data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine" data-aos-delay="8000">
                        <div class="section__generic__imgContainer">
                            <div class="section__generic__imgWrapper parallax" data-rellax-speed="-3"
                                data-rellax-percentage="0.5" style="transform: translate3d(0px, -55px, 0px);">
                                <div class="image" src="/uploads/d_top-722eba485eb36e5118ee90b9fad12ef8.jpg"
                                    style="background-image: url(&quot;https://media1.ledevoir.com/images_galerie/nwd_1135230_914403/image.jpg&quot;);">
                                </div>
                                <div class="imgPlaceholder"></div>
                            </div>
                        </div>
                        <div class="section__generic--content">
                            <h2 class="section__generic__title">{{ archi_project.titre }}</h2>
                            <a class="button pelement" style="padding-top: 0;"
                                href="{{ path('app_portfolio_show', {'id': archi_project.id}) }}">Voir</a>
                        </div>
                    </div>
                    </section>
            {% else %}
            <section class="product__mainImg product__mainImg--first section__generic section__generic--fullLeft anim in-view" data-scrollama-index="1">
                        <div data-aos="fade-left" data-aos-offset="500" data-aos-easing="ease-in-sine">
                        <div class="section__generic__imgContainer">
                            <div class="section__generic__imgWrapper parallax" data-rellax-speed="-3"
                                data-rellax-percentage="0.5" style="transform: translate3d(0px, -55px, 0px);">
                                <div class="image" src="/uploads/d_top-722eba485eb36e5118ee90b9fad12ef8.jpg"
                                    style="background-image: url(&quot;https://media1.ledevoir.com/images_galerie/nwd_1135230_914403/image.jpg&quot;);">
                                </div>
                                <div class="imgPlaceholder"></div>
                            </div>
                        </div>
                        <div class="section__generic--content">
                            <h2 class="section__generic__title">{{ archi_project.titre }}</h2>
                            <a class="button pelement" style="padding-top: 0;"
                                href="{{ path('app_portfolio_show', {'id': archi_project.id}) }}">Voir</a>
                        </div>
                    </div>
                    </section>
            {% endif %}
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/portfolio.js') }}"></script>
{% endblock %}