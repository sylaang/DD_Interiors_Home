{% extends 'base_admin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <h1>Profil de : {{user.nom}} {{user.prenom}} </h1>

    <table class="table">
        {% for message in app.flashes('message') %}
        <div class="col-xs4">
            <div class="p-3my-2 rounded-2 succes"> {{message}} </div>
        </div>
        {% endfor %}
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
            </tr>
            
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_profiles_index') }}">back to list</a>
    <a href="{{ path('app_admin_profile_delete', {'id': user.id} ) }}">supprimer</a>
   
    <a href="{{ path('app_admin_profile_edit', {'id': user.id}) }}">edit</a>
    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
