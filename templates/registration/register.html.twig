{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/styleForm.css') }}">
{% endblock %}


{% block body %}
<div style="height: 100vh;"></div>
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	{{ form_start(registrationForm) }}
	<div class="signup__container">
		<div class="container__child signup__thumbnail ">
			<div class="thumbnail__logo">
				<h1 class="logo__text">DD Interiors Home</h1>
			</div>
			<div class="thumbnail__content text-center">
					<h2 class="heading--primary">Bienvenue</h2>
					<h2 class="heading--secondary">Êtes-vous prêt à nous rejoindre ?</h2>
			</div>
			<div class="thumbnail__links">
				<ul class="list-inline m-b-0 text-center"></ul>
			</div>
			<div class="signup__overlay"></div>
		</div>
		<div class="row container__child signup__form ">
			<div class="form-group row">
				<div class="style-form col-md-6">{{ form_widget(registrationForm.nom, { 'attr': {'placeholder': 'Nom'} }) }}</div>
				<div class="style-form col-md-6">{{ form_widget(registrationForm.prenom, { 'attr': {'placeholder': 'Prénom'} }) }}</div>
			</div>
			<div class="form-group">
				<div class="style-form">{{ form_widget(registrationForm.email, { 'attr': {'placeholder': 'Email'} }) }}</div>
			</div>
			<div class="form-group">
				<div class="style-form">{{ form_widget(registrationForm.phone, { 'attr': {'placeholder': 'Numero de telephone'} }) }}</div>
			</div>
			<div class="form-group">
				<div class="style-form">{{ form_widget(registrationForm.plainPassword) }}</div>
			</div>
			<div class="form-group">
				<div class="style-form">{{ form_row(registrationForm.agreeTerms) }}</div>
			</div>
			<div class="m-t-lg">
				<ul class="list-inline">
					<li>
						<input class="btn--form" type="submit" value="créer mon compte"/>
					</li>
				</ul>
			</div>
		</form>
		{{ form_end(registrationForm) }}
	</div>
</div>{% endblock %}
